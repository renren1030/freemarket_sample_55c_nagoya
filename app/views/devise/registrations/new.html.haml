.us-body
  .us-body__header
    = render partial: 'users/us-body__header'
  .us-body__main
    .us-body__main__container
      .us-body__main__container__registration
        新規会員登録
      .us-body__main__container__registration-form
        .us-body__main__container__registration-form__content
          .us-btn-default.btn-mail
            = link_to registration_signup_index_path do
              = fa_icon"envelope-o",class: "icon-mail"
              メールアドレスで登録する
          .us-btn-default.btn-fb
            = fa_icon"facebook",class: "icon-facebook"
            = link_to "Facebookで登録する",user_facebook_omniauth_authorize_path, class: "font-facebook"
          .us-btn-default.btn-google
            = image_tag "google.jpg",class: "image-google"
            = link_to "Googleで登録する",user_google_oauth2_omniauth_authorize_path, class: "font-google"
    .us-form-fb
      #pageheader
        .clearfix#header_container
          .logo
            %h2#homelink Facebook
      .fb_content.clearfix#content
        "Log in to use your Facebook account with "
        %span.appli メルカリ
        .login_form_container
