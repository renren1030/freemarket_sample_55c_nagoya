.us-body
  .us-body__header
    .us-body__header__iconform
      = link_to root_path do
        = image_tag "mercari_logo.svg"
  .us-body__main
    .us-body__main__container
      .us-body__main__container__registration
        新規会員登録
      .us-body__main__container__registration-form
        .us-body__main__container__registration-form__content
          .us-btn-default.btn-mail
            = fa_icon"envelope-o",class: "icon-mail"
            メールアドレスで登録する
          .us-btn-default.btn-fb
            = fa_icon"facebook",class: "icon-facebook"
            Facebookで登録する
          .us-btn-default.btn-google
            = image_tag "google.jpg",class: "image-google"
            Googleで登録する
    .us-form-fb
    .us-form-google
  .us-body__footer
    .us-body__footer__nav
      .us-body__footer__nav__clear-fix
        %a{href: '#',class:"li"} プライバシーポリシー
        %a{href: '#',class:"li"} メルカリ利用規約
        %a{href: '#',class:"li"} 特定商取引に関する表記
    .us-body__footer__logo
      = link_to image_tag(src= "logo-gray.svg", class: "us-body__footer__logo__img"),root_path
    .us-body__footer__copyright
      %small.us-body__footer__copyright__context © 2019 Mercari
