.us-body
  .us-body__header
    = render partial: 'users/us-body__header'
  .us-body__main-registration
    .us-body__main-registration__container.log_in
      .us-body__main-registration__container__head
        .to_sign_up
          %p アカウントをお持ちでない方はこちら
          = link_to "新規会員登録",registration_signup_index_path, class: "btn-blue"
      = form_for(resource, as: resource_name,url: session_path(resource_name), html: {class:'us-body__main-registration__container__form'}) do |f|
        = hidden_field_tag :current_step, 'registration'
        .us-body__main-registration__container__form__content
          .us-btn-default.btn-fb
            = fa_icon"facebook",class: "icon-facebook"
            = link_to "Facebookで登録する",user_facebook_omniauth_authorize_path, class: "font-facebook"
          .us-btn-default.btn-google
            = image_tag "google.jpg",class: "image-google"
            = link_to "Googleで登録する",user_google_oauth2_omniauth_authorize_path, class: "font-google"
          .form-group
            = f.email_field :email, placeholder: "メールアドレス" , class:'input-default'
          .form-group
            = f.password_field :password, placeholder: "パスワード" , class:'input-default'
          .form-group
            = recaptcha_tags
          = f.submit "ログイン", class: 'btn-default btn-red',type: "submit"
          = link_to "パスワードをお忘れの方",new_password_path(resource_name), class: "forget"
  .us-body__footer
    = render partial: 'users/us-body__footer'
